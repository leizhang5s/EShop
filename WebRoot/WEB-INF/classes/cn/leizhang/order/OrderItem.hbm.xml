<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="cn.leizhang.order.OrderItem" table="orderitem">
		<!-- 配置主键 -->
		<id name="itemid" column="itemid">
			<generator class="native"/>
		</id>
		<!-- 配置普通属性 -->
		<property name="count" column="count"/>
		<property name="subtotal" column="subtotal"/>
		
		<many-to-one name="product" class="cn.leizhang.product.Product" column="pid" lazy="false"/>
		
		<!-- 配置订单项所属订单 -->
		<many-to-one name="order" class="cn.leizhang.order.Order" column="oid"></many-to-one>
	</class>
</hibernate-mapping>