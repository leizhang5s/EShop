<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="cn.leizhang.product.Product" table="product">
		<id name="pid" column="pid">
			<generator class="native"/>
		</id>
		<!-- 配置普通属性 -->
		<property name="pname" column="pname"/>
		<property name="market_price" column="market_price"/>
		<property name="shop_price" column="shop_price"/>
		<property name="image" column="image"/>
		<property name="pdesc" column="pdesc"/>
		<property name="is_hot" column="is_hot"/>
		<property name="pdate" column="pdate"/>
		
		
		<!-- 二级分类的对象 -->
		<many-to-one name="categorySecond" class="cn.leizhang.categorysecond.CategorySecond" column="csid"></many-to-one>	
	</class>
</hibernate-mapping>
